  {
    "name": "url2clip",
    "version": "1.0",
    "description": "This extension simply copies the current tab url in your clipboard",
    "browser_action": {
      "default_icon": "icons/copy-icon-white-16.png"
    },
    "icons": {
      "16": "icons/copy-icon-white-16.png",
      "48": "icons/copy-icon48.png",
      "128": "icons/copy-icon128.png"
    },
    "background": {
      "scripts": [
        "background.js"
      ],
      "persistent": false
    },
    "manifest_version": 2,
    "permissions": [
      "tabs",
	  "http://*/",
	  "https://*/"
    ]
  }
